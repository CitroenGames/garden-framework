[solution]
name = OpenGL

include = thirdparty/3rdparty.buildscript

[project:sdl-test]
type = exe
if(Windows)
{
    subsystem = Windows
}
sources = src/**/*.cpp
headers = src/**/*.h
includes = src, thirdparty/include, .
target_link_libraries(
    PRIVATE SDL2
    PRIVATE GLM
    PRIVATE glad
    PRIVATE tinygltf
    PRIVATE tinyobjloader
    PRIVATE spdlog
)
std = 20
utf8 = true