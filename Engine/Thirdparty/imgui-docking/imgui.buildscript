find_package(Vulkan REQUIRED)
if(Windows)
{
find_package(DirectX11 REQUIRED)
}

[project:imgui-docking]
type = lib
sources = {
    imgui.cpp
    imgui_draw.cpp
    imgui_widgets.cpp
    imgui_tables.cpp
    imgui_demo.cpp
    backends/imgui_impl_sdl2.cpp
    backends/imgui_impl_opengl3.cpp
    backends/imgui_impl_vulkan.cpp
    backends/imgui_impl_dx11.cpp [windows]
}
headers = *.h
includes = ., ${Vulkan_INCLUDE_DIRS}, ${DirectX11_INCLUDE_DIRS}
libs = ${Vulkan_LIBRARIES}, ${DirectX11_LIBRARIES}
libdirs = ${Vulkan_LIBRARY_DIRS}, ${DirectX11_LIBRARY_DIRS}
public_includes = ., backends
target_link_libraries(SDL2)
