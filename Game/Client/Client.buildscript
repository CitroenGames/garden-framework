find_package(Vulkan REQUIRED)

[project:Game]
type = exe
if(Windows)
{
    subsystem = Windows
}
sources = src/**/*.cpp
headers = src/**/*.h src/**/*.hpp ../shared/**/*.hpp
includes = src, ../shared/
libs = ${Vulkan_LIBRARIES}
libdirs = ${Vulkan_LIBRARY_DIRS}
target_link_libraries(
    PRIVATE Engine
)
multiprocessor = true
std = 20
utf8 = true